<%- include('partials/header') %>

    <main class="auth-container">
        <div class="auth-image" style="background-image: url('/images/login-bg-v2.png');">
        </div>
        <div class="auth-form-container">
            <div class="auth-form-wrapper">
                <div class="text-center mb-30">
                    <h1 class="mb-10">Reset Password</h1>
                    <p class="text-muted">Enter your new password</p>
                </div>

                <form id="reset-password-form">
                    <div class="form-group">
                        <label for="password" class="form-label">New Password</label>
                        <div class="input-icon-wrapper">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" id="password" class="form-input with-icon"
                                placeholder="Enter new password" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <div class="input-icon-wrapper">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" id="confirmPassword" class="form-input with-icon"
                                placeholder="Confirm new password" required>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block btn-lg mb-20">
                        Reset Password
                    </button>
                </form>
            </div>
        </div>
    </main>

    <script>
        document.getElementById('reset-password-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const token = '<%= token %>';

            if (password !== confirmPassword) {
                showToast('Passwords do not match', 'danger');
                return;
            }

            try {
                const res = await fetch(`/api/users/reset-password/${token}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ password })
                });

                const data = await res.json();

                if (res.ok) {
                    showToast('Password reset successfully', 'success');
                    setTimeout(() => window.location.href = '/login', 2000);
                } else {
                    showToast(data.message || 'Failed to reset password', 'danger');
                }
            } catch (error) {
                console.error(error);
                showToast('Error resetting password', 'danger');
            }
        });
    </script>

    <%- include('partials/footer') %>